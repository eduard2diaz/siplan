<table class="table table-striped table-hover dataTable" id="table">
    <thead>
    <tr>
        <th>{{ 'row_number'|trans }}</th>
        <th>{{ 'name_field'|trans }}</th>
        <th>{{ 'mother_area'|trans }}</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for area in areas %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ area.nombre }}</td>
            <td>{{ area.padre }}</td>
            <td>
                <ul class="list-inline">
                    <li>
                        <a class="btn blue btn-block btn-outline btn-sm edicion" data-href="{{ path('area_edit', { 'id': area.id }) }}"><i class="fa fa-edit"></i>{{ 'edit'|trans }}</a>
                    </li>
                    <li>
                        <a class="btn btn-danger btn-sm  eliminar_area" data-href="{{ path('area_delete', { 'id': area.id }) }}"><i class="fa fa-trash-o"></i>{{ 'delete'|trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>{{ 'row_number'|trans }}</th>
        <th>{{ 'name_field'|trans }}</th>
        <th>{{ 'mother_area'|trans }}</th>
        <th></th>
    </tr>
    </tfoot>
</table>
