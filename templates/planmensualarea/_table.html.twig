<table class="table table-hover m-table m-table--head-separator-brand" id="planmensualarea_table">
    <thead>
    <tr>
        <th>
            #
        </th>
        <th>
            Mes
        </th>
        <th>
            Año
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for plan in planmensualareas %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ plan.getMesToString() }}</td>
            <td>{{ plan.anno }}</td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    <li class="m-nav__item">
                        <a class="btn btn-default btn-sm" href="{{ path('planmensualarea_show', { 'id': plan.id }) }}" >
                            <i class="flaticon-eye"></i>Visualizar</a>
                    </li>
                    <li class="m-nav__item">
                        <a class="btn btn-danger btn-sm  eliminar_planmensualarea" data-csrf="{{ csrf_token('delete' ~ plan.id) }}" data-href="{{ path('planmensualarea_delete', { 'id': plan.id }) }}">
                            <i class="flaticon-delete-1"></i>Eliminar</a>
                    </li>
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>
            Mes
        </th>
        <th>
            Año
        </th>
        <th>
        </th>
    </tr>
    </tfoot>
</table>
