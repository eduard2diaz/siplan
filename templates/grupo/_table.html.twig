<table class="table table-hover m-table m-table--head-separator-brand" id="grupo_table">
    <thead>
    <tr>
        <th>#</th>
        <th>Nombre</th>
        <th>Creador</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for grupo in grupos %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ grupo.nombre }}</td>
            <td>{{ grupo.creador }}</td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    <li class="m-nav__item">
                        <a class="btn btn-sm edicion" data-href="{{ path('grupo_show', { 'id': grupo.id }) }}">
                            <i class="flaticon-eye"></i></a>
                    </li>
                    {% if app.user.id==grupo.creador.id %}
                    <li class="m-nav__item">
                        <a class="btn btn-sm btn-info edicion" data-href="{{ path('grupo_edit', { 'id': grupo.id }) }}">
                            <i class="flaticon-edit-1"></i></a>
                    </li>
                    <li class="m-nav__item">
                        <a class="btn btn-danger btn-sm  eliminar_grupo" data-href="{{ path('grupo_delete', { 'id': grupo.id }) }}" data-csrf="{{ csrf_token('delete' ~ grupo.id) }}">
                            <i class="flaticon-delete-1"></i></a>
                    </li>
                    {% endif %}
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>Nombre</th>
        <th>Creador</th>
        <th></th>
    </tr>
    </tfoot>
</table>
