{{form_start(form,{'attr':{
    'id': form_id|default('grupo_new'),
    'class': 'm-form m-form--state'
}})}}
<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.nombre) }}
                </label>
                <div>
                    {{ form_widget(form.nombre) }}
                    {{ form_errors(form.nombre) }}
                </div>
            </div>
        </div>
    </div>
    {% if grupo.id!=null %}
    <div class="row m--margin-top-20">
        <div class="col-md-12">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.creador) }}
                </label>
                <div>
                    {{ form_widget(form.creador) }}
                    {{ form_errors(form.creador) }}
                </div>
            </div>
        </div>
    </div>
    {% endif %}
    <div class="row m--margin-top-20">
        <div class="col-md-12">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.idmiembro) }}
                </label>
                <div>
                    {{ form_widget(form.idmiembro) }}
                    {{ form_errors(form.idmiembro) }}
                </div>
            </div>
        </div>
    </div>
{{ form_errors(form) }}
{{ form_rest(form) }}
</div>
<div class="modal-footer">
    <a class="btn btn-sm btn-metal" data-dismiss="modal"><i class="flaticon-cancel"></i>Cancelar</a>
    <button class="btn btn-sm btn-primary mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit-1 ladda-label"></i>
        <span class="ladda-label">{{ action |default('Guardar')}}</span>
        <span class="ladda-spinner"></span>
    </button>
</div>
{{form_end(form)}}