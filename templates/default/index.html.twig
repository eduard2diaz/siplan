{% extends 'layout/anonimo.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/page/index.css','siplan') }}"/>
{% endblock %}
{% block body %}
    <div id="login-form">
        <div class="col-md-4">
            {% if error is defined and error is not empty %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                    {{ error.message |trans }}
                </div>

            {% endif %}
            <form action="{{ path('check') }}" method="POST" class="m-form m-form--state">
                <div class="m-portlet__body">
                    <div class="m-form__section">
                        <div class="form-group m-form__group">
                            <label for="_username">
                                Usuario o correo electrónico:
                            </label>
                            <div class="m-input-icon m-input-icon--left">
                                <input class="form-control m-input" placeholder="Escriba su usuario" id="_username"
                                       name="_username"
                                       required="required" type="text" value="{{ last_username }}">
                                <span class="m-input-icon__icon m-input-icon__icon--left">
													<span><i class="la la-user"></i></span>
												</span>
                            </div>
                        </div>
                        <div class="form-group m-form__group">
                            <label for="_password">
                                Contraseña:
                            </label>
                            <div class="m-input-icon m-input-icon--left">
                                <input class="form-control m-input" placeholder="Escriba su contraseña" id="_password"
                                       name="_password"
                                       required="required" type="password">
                                <span class="m-input-icon__icon m-input-icon__icon--left">
													<span><i class="la la-key"></i></span>
												</span>
                            </div>
                        </div>
                        <div class="form-group m-form__group">
                            <label class="m-checkbox">
                                <input type="checkbox" name="remember" value="1"/>Recuérdame<span></span>
                            </label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-sm btn-success">
                    Acceder
                </button>
                <button type="reset" class="btn btn-sm btn-secondary">
                    Cancelar
                </button>
            </form>
        </div>
    </div>
    <div id="promo1" class="m--padding-40">
        <div class="row">
            <div class="col-md-6" id="clients">
            </div>
            <div class="col-md-6">
                <div class="m-widget14">
                    <div class="m-widget14__header m--margin-bottom-30">
                        <h3 class="m-widget14__title">
                            Explota al máximo tu tiempo
                        </h3>
                        <span class="m-widget14__desc">
                                    Planifica y optimiza tus atividades
								</span>
                    </div>
                    <p class="description">
                        Mejora tus habilidades como trabajador, crea tus planes de trabajo,organiza tus actividades y mucho más.
                        Utiliza SIPLAN y comienza a sacar el mejor provecho a tu jornada laboral.
                    </p>
                    <a href="{{ path('estatica',{'page':'servicio'}) }}" class="m-link m--font-boldest">Conocer más</a>
                </div>
            </div>
        </div>
    </div>
    <div id="promo2">
        <div class="col-md-6">
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('script/page/login.js','siplan') }}"></script>
    <script>
        login.init();
    </script>
{% endblock javascripts %}