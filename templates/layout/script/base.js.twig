<script>
    <!--CONFIGURACION DE LA GESTION DE SONIDO!-->
    window.error_sound = '{{ asset('sound/error.wav','apps') }}';
    createjs.Sound.registerPlugins([createjs.WebAudioPlugin, createjs.FlashAudioPlugin]);
    createjs.Sound.alternateExtensions = ["mp3"];
    createjs.Sound.registerSound(window.error_sound, "sound");
    <!--FIN DE LA CONFIGURACION DE LA GESTION DE SONIDO!-->

    <!--DEFINICION DE LA VARIABLE GLOBAL _locale PARA LA INTERNACIONALIZACION-->
    var _locale='{{ app.request.locale }}';

    <!--PERSONALIZACION DE BlockUI-->
    window.imagen = '{{ asset('img/loading-spinner-blue.gif','global') }}';
    window.loadingMessage='{{ 'loading'|trans }}';

    <!--INTERNACIONALIZACION DE JQUERY-DATATABLE-->
    var datatable_url='{{ asset('plugins/datatables/language/'~app.request.locale~'.json','global') }}';

    <!--INTERNACIONALIZACION DE LOS MENSAJES DE ERROR-->
    window.errormessaje_title='{{ 'errormessaje_title'|trans }}';
    window.errormessaje_body='{{ 'errormessaje_body'|trans }}';

    <!--VISUALIZACION DE LOS MENSAJES FLASH DE LOS CONTROLADORES-->
    {% for tipo, mensajes in app.session.flashbag.all() %}
    {% for mensaje in mensajes %}
    var shortCutFunction = '{{ tipo }}';
    var msg = '{{ mensaje }}';
    var title = '';
    var $showDuration = 10;
    var $hideDuration = 3;
    toastr.options = {
    closeButton: true,
    positionClass: 'toast-bottom-left'};
    $("#toastrOptions").text("Command: toastr[" + shortCutFunction + "](\"" + msg + (title ? "\", \"" + title : '') + "\")\n\ntoastr.options = " + JSON.stringify(toastr.options, null, 2));
    var $toast = toastr[shortCutFunction](msg, title); // Wire up an event handler to a button in the toast, if it exists
    $toastlast = $toast;
    {% endfor %}
    {% endfor %}
    <!--FIN VISUALIZACION DE LOS MENSAJES FLASH DE LOS CONTROLADORES-->
</script>
