{% extends "layout/base.html.twig" %}
{% block subheader %}
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title ">
                {% block page_title %}{% endblock page_title %}
            </h3>
        </div>
        <div>
            {% block rightoptions_block %}{% endblock rightoptions_block %}
        </div>
    </div>
</div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('vendors/custom/datatables/datatables.bundle.css','template') }}"/>
{% endblock %}
{% block header %}
{% embed "layout/recortes/header.html.twig" %}
{% block top_menu %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ include('layout/recortes/topmenu/admin_topmenu.html.twig') }}
    {% endif %}


    <li class="dropdown dropdown-extended dropdown-notification" id="header_notification_bar">
        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown"
           data-close-others="true">
            <i class="icon-bell"></i>
            <span class="badge badge-default pending_task_counter"></span>
        </a>
        <ul class="dropdown-menu" id="pending_task">
        </ul>
    </li>

{% endblock top_menu %}
    {% block user_shortcut_menu %}

    {% if is_granted('ROLE_JEFETRANSPORTE') or is_granted('ROLE_CAJERO') %}
            {{ include('layout/recortes/topmenu/shortcuts.html.twig') }}
    {% endif %}
    {{ include('layout/recortes/topmenu/user_topmenu.html.twig') }}

    {% endblock %}

{% endembed %}
{% endblock header %}


{% block javascripts %}
    {{ parent() }}
    <script>
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-bottom-left",
            "preventDuplicates": true,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
    </script>
    <script type="text/javascript" src="{{ asset('vendors/custom/datatables/datatables.bundle.js','template') }}"></script>
    <script src="{{ asset('plugins/jquery.fileDownload.js','siplan') }}"></script>
    <script type="text/javascript" src="{{ asset('plugins/bootbox/bootbox.min.js','siplan') }}"></script>
    <!--IMPORTANDO LAS LIBRERIAS DE AMCHART-->
    <script src="{{ asset('assets/siplan/plugins/amcharts4/core.js') }}"></script>
    <script src="{{ asset('assets/siplan/plugins/amcharts4/charts.js') }}"></script>
    <script src="{{ asset('assets/siplan/plugins/amcharts4/themes/animated.js') }}"></script>
    <!--FIN DE IMPORTANDO LAS LIBRERIAS DE AMCHART-->
    <script src="{{ asset('script/base/authenticated.js','siplan') }}"></script>
    <script src="{{ asset('script/base/reporte.js','siplan') }}"></script>
    <script>
        authenticated.init();
        reporte.init();
        var datatable_translation='{{ asset('assets/siplan/plugins/datatable/es.json') }}';
    </script>
{% endblock %}
