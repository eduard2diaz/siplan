<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Detalles del mensaje</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        </div>
        <div>
            <div class="row margin-top-10">
                <div class="col-md-3">
                    <div class="m-card-profile">
                        <div class="m-card-profile__title m--hide">
                            Remitente
                        </div>
                        <div class="m-card-profile__pic">
                            <div class="m-card-profile__pic-wrapper">
                                <img src="{{ asset('app/media/img/users/user4.jpg','template') }}" alt="">
                            </div>
                        </div>
                        <div class="m-card-profile__details">
                            <span class="m-card-profile__name">{{ mensaje.remitente }}</span>
                            <small class="text-muted"><i
                                        class="flaticon-time"></i> {{ mensaje.fecha|date('d-m-Y H:i') }}</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <i class="icon-users"></i> Destinatario:
                    <span class="select2 select2-container select2-container--default">
                        <span class="selection">
                            <span class="select2-selection select2-selection--multiple">
                                <ul class="select2-selection__rendered">
                                    {% for obj in mensaje.iddestinatario.toArray() %}
                                    <li class="select2-selection__choice"
                                        title="{{ obj.nombre }}"
                                        data-select2-id="20"><span
                                                class="select2-selection__choice__remove" role="presentation">Ã—</span>{{ obj.nombre }}</li>
                                    </ul>
                                    {% endfor %}

                            </span>
                        </span>
                        <span
                                class="dropdown-wrapper" aria-hidden="true"></span></span>
                    <ul class="tags" style="padding-left: 0">
                                <span class="select2 select2-container select2-container--bootstrap " dir="ltr"
                                      style="width: auto;">
                <span class="select2-selection select2-selection--multiple">
                    <ul class="select2-selection__rendered">

                        </ul>
                </span>
            </span>
                    </ul>
                    <p>{{ mensaje.descripcion }}
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-sm btn-metal" data-dismiss="modal">Cancelar</a>
            </div>
        </div>
    </div>
</div>

