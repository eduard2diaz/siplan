<div class="modal-dialog modal-full">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Detalles del mensaje</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        </div>
        <div>
            <div class="row margin-top-10">
                <div class="col-md-3">
                    <div class="m-card-profile">
                        <div class="m-card-profile__title m--hide">
                            Remitente
                        </div>
                        <div class="m-card-profile__pic">
                            <div class="m-card-profile__pic-wrapper">
                                <img src="{{ asset('app/media/img/users/user4.jpg','template') }}" alt="">
                            </div>
                        </div>
                        <div class="m-card-profile__details">
                            <span class="m-card-profile__name">{{ mensaje.remitente }}</span>
                            <small class="text-muted"><i
                                        class="flaticon-time"></i> {{ mensaje.fecha|date('d-m-Y H:i') }}</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 m--margin-right-5">
                    <span class="select2 select2-container select2-container--default select2-container--below select2-container--focus" dir="ltr" data-select2-id="27" style="width: auto;">
                        <span class="selection">
                            <span class="select2-selection select2-selection--multiple" role="combobox" aria-haspopup="true" aria-expanded="false" tabindex="-1">
                                <ul class="select2-selection__rendered">
                                    {% for destinatario in mensaje.iddestinatario %}
                                        <li class="select2-selection__choice" title="{{ destinatario.nombre }}" data-select2-id="{{ destinatario.id }}"><span class="select2-selection__choice__remove" role="presentation">Ã—</span>{{ destinatario.nombre }}</li>
                                    {% endfor%}
                                </ul>
                            </span>
                        </span>
                    </span>
                    <p class="m--margin-top-20"><b>Asunto:</b> {{ mensaje.asunto }}</p>
                    <p class="m--margin-top-20">{{ mensaje.descripcion }}</p>
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-sm btn-metal" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
            </div>
        </div>
    </div>
</div>
