<div class="m-list-timeline m-list-timeline--skin-light">
    <div class="m-list-timeline__items">

            {% for mensaje in mensajes %}
        <div class="m-list-timeline__item">
                <span class="m-list-timeline__badge -m-list-timeline__badge--state-success"></span>
                <span class="m-list-timeline__text"><a class="mensaje_show" data-href="{{ path('mensaje_show', { 'id': mensaje.id }) }}">{{ mensaje.descripcion }}</a></span>
                <span class="m-list-timeline__time">{{ mensaje.fecha | ago }}</span>
        </div>
            {% else %}
                <div class="m-list-timeline__item">
                    <span class="m-list-timeline__badge -m-list-timeline__badge--state-danger"></span>
                    <span class="m-list-timeline__text">No hay nuevos mensajes</span>
                </div>
            {% endfor %}

    </div>
</div>
