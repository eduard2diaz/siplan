<div class="modal-dialog modal-full">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Detalles de la puntualización</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        </div>
        <div>
            <table class="table" style="margin-bottom: 0px">
                <tr>
                    <th>Actividad</th>
                    <td colspan="3">{{ puntualizacion.actividad }}</td>
                </tr>
                <tr>
                    <th>Fecha de creación</th>
                    <td>{{ puntualizacion.fechacreacion | date('d-m-Y H:i') }}</td>
                    <th>Tipo</th>
                    <td>
                        {% set estado='success' %}
                        {% if puntualizacion.tipo==1 %}
                            {% set estado='info' %}
                        {% elseif puntualizacion.tipo==2 %}
                            {% set estado='danger' %}
                        {% endif %}

                        <span class="m-badge m-badge--{{ estado }} m-badge--wide m--font-boldest">{{ puntualizacion.getTipoString() }}</span>

                    </td>
                </tr>
                <tr>
                    <th>Descripción</th>
                    <td colspan="3"><p>{{ puntualizacion.descripcion }}</p></td>
                </tr>
            </table>
        </div>
        <div class="modal-footer">
            <a class="btn btn-sm btn-metal active" data-dismiss="modal"><i class="flaticon-cancel"></i>Cancelar</a>
        </div>
    </div>
</div>