<table class="table table-hover m-table m-table--head-separator-brand" id="cargo_table">
    <thead>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            Área
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for cargo in cargos %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ cargo.nombre }}</td>
            <td>{{ cargo.area }}</td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    <li class="m-nav__item">
                        <a class="btn btn-sm btn-info edicion" data-href="{{ path('cargo_edit', { 'id': cargo.id }) }}">
                            <i class="flaticon-edit-1"></i> Editar</a>
                    </li>
                    {% if app.user.cargo.id!=cargo.id %}
                    <li class="m-nav__item">
                        <a class="btn btn-danger btn-sm  eliminar_cargo" data-href="{{ path('cargo_delete', { 'id': cargo.id }) }}" data-csrf="{{ csrf_token('delete' ~ cargo.id) }}">
                            <i class="flaticon-delete-1"></i> Eliminar</a>
                    </li>
                    {% endif %}
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>
            Nombre
        </th>
        <th>
            Área
        </th>
        <th>
        </th>
    </tr>
    </tfoot>
</table>
