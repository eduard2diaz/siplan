<table class="table table-striped table-hover dataTable" id="actividad_table">
    <thead>
    <tr>
        <th>Nombre</th>
        <th>Inicio</th>
        <th>Fin</th>
        <th>Estado</th>
        <th style="width: 25%"></th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for actividad in actividads %}
        <tr>
            <td ><p data-objetivo="{{ actividad.esobjetivo }}">{{ actividad.nombre }}</p></td>
            <td>{{ actividad.fecha |date('d-m-Y H:i') }}</td>
            <td>{{ actividad.fecha|date('d-m-Y') ==actividad.fechaf |date('d-m-Y') ? actividad.fechaf |date('H:i') : actividad.fechaf |date('d-m-Y H:i') }}</td>
            <td><span class="label label-sm label-{{ actividad.getEstadoColor() }}"> {{ actividad.getEstadoString() }} </span></td>
            <td>
                <ul class="list-inline">
                    <li>
                        <a class="btn btn-default btn-sm  edicion" data-href="{{ path('actividad_show',{'id':actividad.id}) }}">
                            {{ 'visualize'|trans }}
                        </a>
                    </li>
                    {% if app.user.id==plantrabajo.usuario.id  or (plantrabajo.usuario.jefe!=null and plantrabajo.usuario.jefe.id==app.user.id and plantrabajo.asignadapor.id==app.user.id) %}
                    <li>
                        <a class="btn blue btn-block btn-outline btn-sm edicion" data-href="{{ path('actividad_edit', { 'id': actividad.id }) }}"><i class="fa fa-edit"></i>{{ 'edit'|trans }}</a>
                    </li>
                    <li>
                        <a class="btn btn-danger btn-sm  eliminar_actividad" data-href="{{ path('actividad_delete', { 'id': actividad.id }) }}"><i class="fa fa-trash-o"></i>{{ 'delete'|trans }}</a>
                    </li>
                    {% endif %}
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>Nombre</th>
        <th>Inicio</th>
        <th>Fin</th>
        <th>Estado</th>
        <th></th>
    </tr>
    </tfoot>
</table>
