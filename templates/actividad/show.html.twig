<div class="modal-dialog modal-full">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">{{ actividad.nombre }}</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        </div>
        <div>
            <table class="table table-striped" style="margin-bottom: 0px">
                <tr>
                    <th>Nombre</th>
                    <td colspan="3">{{ actividad.nombre }}</td>
                </tr>
                <tr>
                    <th>Asignada por</th>
                    <td>{{ actividad.asignadapor }}</td>
                    <th>Estado</th>
                    <td>{{ actividad.getEstadoString() }}</td>
                </tr>
                <tr>
                    <th>Fecha de Inicio</th>
                    <td>{{ actividad.fechaf |date('d-m-Y H:i') }}</td>
                    <th>Fecha de Fin</th>
                    <td>{{ actividad.fechaf |date('d-m-Y H:i') }}</td>
                </tr>
                <tr>
                    <th>Es una actividad objetivo</th>
                    <td>{{ actividad.esobjetivo ? 'Si' : 'No' }}</td>
                    <th>Externa</th>
                    <td colspan="3">{{ actividad.esexterna ? 'Si' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Archivos</th>
                    <td  colspan="3">
                        <ul class="m-nav m-nav--inline">
                            {% for archivo in actividad.ficheros %}
                            <li class="m-nav__item">
                                <a href="{{ path('fichero_download',{'id':archivo.id}) }}" class="m-nav__link">
										<span class="m-nav__link-text">
											<i class="flaticon-download"></i> {{ archivo.nombre }}
										</span>
                                </a>
                            </li>
                            {% endfor %}
                        </ul>

                    </td>
                </tr>
                <tr>
                    <th>Descripci√≥n</th>
                    <td  colspan="3"><p>{{ actividad.descripcion |raw}}</p></td>
                </tr>

            </table>
        </div>
        <div class="modal-footer">
            <a class="btn btn-sm btn-primary active" data-dismiss="modal">Cerrar</a>
        </div>
    </div>
</div>