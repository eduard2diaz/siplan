<div class="m-list-timeline m-list-timeline--skin-light">
    <div class="m-list-timeline__items">
        {% for actividad in actividades %}
            <div class="m-list-timeline__item">
                <span class="m-list-timeline__badge -m-list-timeline__badge--state-success"></span>
                <span class="m-list-timeline__text"><a data-href="{{ path('actividad_show', { 'id': actividad.id }) }}" class="actividad_show">{{ actividad.nombre  |truncate(70) }}</a></span>
                <span class="m-list-timeline__time">{{ actividad.fecha | ago }}</span>
            </div>
        {% else %}
            <div class="m-list-timeline__item">
                <span class="m-list-timeline__badge -m-list-timeline__badge--state-danger"></span>
                <span class="m-list-timeline__text">No hay nuevas actividades</span>
            </div>
        {% endfor %}
    </div>
</div>