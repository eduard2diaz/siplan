            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.actividad) }}
                </label>
                <div>
                    {{ form_widget(form.actividad) }}
                    {{ form_errors(form.actividad) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row m--margin-top-20">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.tipo) }}
                </label>
                <div>
                    {{ form_widget(form.tipo) }}
                    {{ form_errors(form.tipo) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.fechacreacion) }}
                </label>
                <div>
                    {{ form_widget(form.fechacreacion) }}
                    {{ form_errors(form.fechacreacion) }}
