<table class="table table-hover m-table m-table--head-separator-brand" id="plantrabajo_table">
    <thead>
    <tr>
        <th>
            #
        </th>
        <th>
            Mes
        </th>
        <th>
            Año
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {%set i=1%}
    {% for plan in plantrabajos %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ plan.getMesToString() }}</td>
            <td>{{ plan.anno }}</td>
            <td>
                <ul class="m-nav m-nav--inline m--pull-right">
                    {% if app.user.id==user_id or esSubordinado==true %}
                    <li class="m-nav__item">
                        <a class="btn  btn-default btn-sm" href="{{ path('plantrabajo_show', { 'id': plan.id }) }}" >
                            <i class="flaticon-eye"></i>Visualizar</a>
                    </li>

                    <li class="m-nav__item">
                        <a class="btn btn-danger btn-sm  eliminar_plantrabajo" data-csrf="{{ csrf_token('delete' ~ plan.id) }}" data-href="{{ path('plantrabajo_delete', { 'id': plan.id }) }}">
                            <i class="flaticon-delete-1"></i>Eliminar
                        </a>
                    </li>
                    {% endif %}
                </ul>
            </td>
        </tr>
        {%set i=1+i%}
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>
            #
        </th>
        <th>
            Mes
        </th>
        <th>
            Año
        </th>
        <th>
        </th>
    </tr>
    </tfoot>
</table>
