{% extends 'layout/userprofile.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css') }}" rel="stylesheet"
          type="text/css"/>
    <link href="{{ asset('plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css') }}" rel="stylesheet"
          type="text/css"/>
{% endblock %}

{% block content %}
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon"><i class="flaticon-list-3"></i></span>
                    <h3 class="m-portlet__head-text">
                        Plan de Trabajo Individual <small>{{ plantrabajo.mestoString()~', '~plantrabajo.anno }}</small>
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <ul class="m-footer__nav m-nav m-nav--inline m--margin-top-10">
                    <li class="m-nav__item">
                        <div>
                            <div class="m-dropdown m-dropdown--inline m-dropdown--arrow m-dropdown--align-right m-dropdown--align-push"
                                 m-dropdown-toggle="hover" aria-expanded="true">
                                <a href="#"
                                   class="m-portlet__nav-link btn btn-lg btn-secondary  m-btn m-btn--outline-2x m-btn--air m-btn--icon m-btn--icon-only m-btn--pill  m-dropdown__toggle">
                                    <i class="la la-plus m--hide"></i>
                                    <i class="la la-filter"></i>
                                </a>
                                <div class="m-dropdown__wrapper">
                                    <span class="m-dropdown__arrow m-dropdown__arrow--right m-dropdown__arrow--adjust"></span>
                                    <div class="m-dropdown__inner">
                                        <div class="m-dropdown__body">
                                            <div class="m-dropdown__content">
                                                <ul class="m-nav">
                                                    <li class="m-nav__section m-nav__section--first">
                                                        <span class="m-nav__section-text">Filtrar actividades por estado</span>
                                                    </li>
                                                    <li class="m-nav__item">
                                                        <a data-href="{{ path('plantrabajo_filtraractividad',{'id':plantrabajo.id,'filtro':1}) }}"
                                                           class="m-nav__link refrescar">
                                                            <i class="m-nav__link-icon flaticon-edit-1"></i>
                                                            <span class="m-nav__link-text">Registradas</span>
                                                        </a>
                                                    </li>
                                                    <li class="m-nav__item">
                                                        <a data-href="{{ path('plantrabajo_filtraractividad',{'id':plantrabajo.id,'filtro':2}) }}"
                                                           class="m-nav__link refrescar">
                                                            <i class="m-nav__link-icon flaticon-time"></i>
                                                            <span class="m-nav__link-text">En proceso</span>
                                                        </a>
                                                    </li>
                                                    <li class="m-nav__item">
                                                        <a data-href="{{ path('plantrabajo_filtraractividad',{'id':plantrabajo.id,'filtro':3}) }}"
                                                           class="m-nav__link refrescar">
                                                            <i class="m-nav__link-icon flaticon-reply"></i>
                                                            <span class="m-nav__link-text">Culminadas</span>
                                                        </a>
                                                    </li>
                                                    <li class="m-nav__item">
                                                        <a data-href="{{ path('plantrabajo_filtraractividad',{'id':plantrabajo.id,'filtro':4}) }}"
                                                           class="m-nav__link refrescar">
                                                            <i class="m-nav__link-icon flaticon-list-3"></i>
                                                            <span class="m-nav__link-text">Cumplidas</span>
                                                        </a>
                                                    </li>
                                                    <li class="m-nav__item">
                                                        <a data-href="{{ path('plantrabajo_filtraractividad',{'id':plantrabajo.id,'filtro':5}) }}"
                                                           class="m-nav__link refrescar">
                                                            <i class="m-nav__link-icon flaticon-cancel"></i>
                                                            <span class="m-nav__link-text">Incumplidas</span>
                                                        </a>
                                                    </li>
                                                    <li class="m-nav__item">
                                                        <a data-href="{{ path('plantrabajo_filtraractividad',{'id':plantrabajo.id}) }}"
                                                           class="m-nav__link refrescar">
                                                            <i class="m-nav__link-icon flaticon-list-1"></i>
                                                            <span class="m-nav__link-text">Todas</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="m-nav__item">
                        <div>
                            <div class="m-dropdown m-dropdown--inline m-dropdown--arrow m-dropdown--align-right m-dropdown--align-push"
                                 m-dropdown-toggle="hover" aria-expanded="true">
                                <a href="#"
                                   class="m-portlet__nav-link btn btn-lg btn-primary  m-btn m-btn--outline-2x m-btn--air m-btn--icon m-btn--icon-only m-btn--pill  m-dropdown__toggle">
                                    <i class="la la-plus m--hide"></i>
                                    <i class="la la-ellipsis-h"></i>
                                </a>
                                <div class="m-dropdown__wrapper">
                                    <span class="m-dropdown__arrow m-dropdown__arrow--right m-dropdown__arrow--adjust"></span>
                                    <div class="m-dropdown__inner">
                                        <div class="m-dropdown__body">
                                            <div class="m-dropdown__content">
                                                <ul class="m-nav">
                                                    <li class="m-nav__section m-nav__section--first">
                                                        <span class="m-nav__section-text">Acciones rápidas</span>
                                                    </li>
                                                    <li class="m-nav__item">
                                                        <a href="{{ path('actividad_new',{'id':plantrabajo.id}) }}"
                                                           class="m-nav__link">
                                                            <i class="m-nav__link-icon flaticon-plus"></i>
                                                            <span class="m-nav__link-text">
																	Nueva actividad
																</span>
                                                        </a>
                                                    </li>
                                                    <li class="m-nav__item">
                                                        <a id="plantrabajo_estadistica"
                                                           data-href="{{ path('plantrabajo_estadistica',{'id':plantrabajo.id}) }}"
                                                           class="m-nav__link">
                                                            <i class="m-nav__link-icon flaticon-statistics"></i>
                                                            <span class="m-nav__link-text">
                                                                Estadísticas
																</span>
                                                        </a>
                                                    </li>
                                                    <li class="m-nav__item">
                                                        <a id="cargar_antiguos_link" class="m-nav__link"
                                                           data-href="{{ path('plantrabajo_antiguos',{'id':plantrabajo.id}) }}">
                                                            <i class="m-nav__link-icon flaticon-add"></i>
                                                            <span class="m-nav__link-text">
																	Clonar mis actividades anteriores
																</span>
                                                        </a>
                                                    </li>
                                                    {% if app.user.id==plantrabajo.usuario.id %}
                                                        <li class="m-nav__item">
                                                            <a data-href="{{ path('puntualizacion_plan_trabajo_new',{'id':plantrabajo.id}) }}"
                                                               class="m-nav__link editarpuntualizacion">
                                                                <i class="m-nav__link-icon flaticon-plus"></i>
                                                                <span class="m-nav__link-text">
																	Nueva puntualización
																</span>
                                                            </a>
                                                        </li>

                                                        {% if is_granted('ROLE_COORDINADORINSTITUCIONAL') or app.session.get('esmiembroconsejodireccion')==true %}
                                                            <li class="m-nav__item">
                                                                <a id="cargar_actividadesgeneral_link"
                                                                   class="m-nav__link"
                                                                   data-href="{{ path('actividadgeneral_plangeneral',{'id':plantrabajo.id}) }}">
                                                                    <i class="m-nav__link-icon flaticon-add"></i>
                                                                    <span class="m-nav__link-text">
                                                                        Clonar actividades general
                                                                    </span>
                                                                </a>
                                                            </li>
                                                        {% endif %}
                                                    {% endif %}
                                                    <li class="m-nav__item">
                                                        <a id="cargar_actividadesgeneral_link"
                                                           class="m-nav__link"
                                                           data-href="{{ path('actividadarea_planmensual',{'id':plantrabajo.id}) }}">
                                                            <i class="m-nav__link-icon flaticon-add"></i>
                                                            <span class="m-nav__link-text">
                                                                        Clonar actividades del plan mensual del área
                                                                    </span>
                                                        </a>
                                                    </li>
                                                    <li class="m-nav__separator m-nav__separator--fit"></li>
                                                    <li class="m-nav__item">
                                                        <a href="{{ path('plantrabajo_exportar',{'id':plantrabajo.id}) }}"
                                                           class="m-nav__link">
                                                            <i class="m-nav__link-icon flaticon-file"></i>
                                                            <span class="m-nav__link-text">
																	Exportar
																</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            <ul class="nav nav-tabs  m-tabs-line m-tabs-line--2x m-tabs-line--success" role="tablist">
                <li class="nav-item m-tabs__item">
                    <a class="nav-link m-tabs__link active show" data-toggle="tab" href="#m_tabs_6_1" role="tab"
                       aria-selected="true">Actividades(
                        <small id="filtro"><span
                                    class="m-nav__link-badge m-badge m-badge--dot m-badge--dot-small m-badge--danger"></span>
                            todas
                        </small>
                        )</a>
                </li>
                <li class="nav-item m-tabs__item">
                    <a class="nav-link m-tabs__link" data-toggle="tab" href="#m_tabs_6_3" role="tab"
                       aria-selected="false">Puntualizaciones</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active show" id="m_tabs_6_1" role="tabpanel">
                    <h4 class="text-muted">
                    </h4>
                    {% include 'actividad/_table.html.twig' %}
                </div>
                <div class="tab-pane" id="m_tabs_6_3" role="tabpanel">
                    {% include 'puntualizacion_plan_trabajo/_table.html.twig' %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('script/entity/actividad.js','siplan') }}"></script>
    <script src="{{ asset('script/entity/puntualizacionplantrabajo.js','siplan') }}"></script>
    <script>
        var plantrabajo = '{{ plantrabajo.id }}';
        actividad.init();
        actividad.clonacion();
        puntualizacionplantrabajo.init();
    </script>
{% endblock %}
