{{ form_start(form,{'attr':{
    'id': form_id|default('actividad_new')
}}) }}
{% set i=0 %}
<div class="m-portlet__head">
    <div class="m-portlet__head-tools">
        <ul class="nav nav-tabs m-tabs-line m-tabs-line--primary m-tabs-line--2x" role="tablist">
            <li class="nav-item m-tabs__item">
                <a class="nav-link m-tabs__link active show" data-toggle="tab" href="#m_tabs_6_1" role="tab"
                   aria-selected="true">
                    <i class="la la-calendar-plus-o"></i>
                    General
                </a>
            </li>
            <li class="nav-item m-tabs__item">
                <a class="nav-link m-tabs__link" data-toggle="tab" href="#m_tabs_6_2" role="tab" aria-selected="false">
                    <i class="la la-info-circle"></i>
                    Detalles
                </a>
            </li>
            <li class="nav-item m-tabs__item">
                <a class="nav-link m-tabs__link" data-toggle="tab" href="#m_tabs_6_4" role="tab" aria-selected="false">
                    <i class="la la-users"></i>
                    Participantes
                </a>
            </li>
            <li class="nav-item m-tabs__item">
                <a class="nav-link m-tabs__link" data-toggle="tab" href="#m_tabs_6_5" role="tab" aria-selected="false">
                    <i class="la la-glass"></i>
                    Aseguramiento
                </a>
            </li>
        </ul>
    </div>
</div>
<div class="m-portlet__body">
    <div class="tab-content">
        <div class="tab-pane active show" id="m_tabs_6_1" role="tabpanel">

            <div class="modal-body" id="modal-body">
                <div class="row m--margin-bottom-20">
                    <div class="col-md-6">{{ form_row(form.nombre) }}</div>
                    <div class="col-md-6">{{ form_row(form.areaconocimiento) }}</div>
                </div>
                <div class="row m--margin-bottom-20">
                    <div class="col-md-6">{{ form_row(form.lugar) }}</div>
                </div>
                <div class="row m--margin-bottom-20">
                    <div class="col-md-3">{{ form_row(form.fecha) }}</div>
                    <div class="col-md-3">{{ form_row(form.fechaf) }}</div>
                </div>
            </div>
            {{ form_errors(form) }}
        </div>

        <div class="tab-pane" id="m_tabs_6_2" role="tabpanel">
            <div class="row">
                <div class="col-md-12">{{ form_row(form.descripcion) }}</div>
            </div>
        </div>

        <div class="tab-pane" id="m_tabs_6_4" role="tabpanel">
            <div class="row">
                <div class="col-md-6">{{ form_row(form.dirigen) }}</div>
                <div class="col-md-6">{{ form_row(form.participan) }}</div>
            </div>
        </div>
        <div class="tab-pane" id="m_tabs_6_5" role="tabpanel">
            <div class="row">
                <div class="col-md-12">{{ form_row(form.aseguramiento) }}</div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-sm btn-metal" data-dismiss="modal">Cancelar</a>
    <button class="btn  btn-sm btn-primary mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <span class="ladda-label">{{ action |default('Guardar') }}</span>
        <span class="ladda-spinner"></span>
    </button>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}