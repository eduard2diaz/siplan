{{form_start(form,{'attr':{
                            'id': form_id|default('usuario_new')
}})}}
<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-md-6">{{form_row(form.nombre)}}</div>
        {% if form.jefe is defined %}
            <div class="col-md-6">
                {{form_row(form.jefe)}}
            </div>
        {% endif %}
    </div>

    <div class="row margin-top-20 margin-bottom-20">
        <div class="col-md-6 pull-left">{{form_row(form.area)}}</div>
        <div class="col-md-6">{{form_row(form.cargo,{'attr':{
        'class':'form-control input-medium'
        }})}}</div>
    </div>

    <h5>{{ 'worker_accountdetails'|trans }}</h5>
    <hr/>
        <div class="row margin-top-20 margin-bottom-20">
            <div class="col-md-6">{{form_row(form.usuario)}}</div>
            <div class="col-md-6">{{form_label(form.activo)}}<br/>{{form_widget(form.activo)}}{{form_errors(form.activo)}}</div>
        </div>
        <div class="row margin-top-20 margin-bottom-20">
            <div class="col-md-6">{{form_row(form.correo)}}</div>
            <div class="col-md-6">{{form_row(form.idrol)}}</div>
        </div>

        <div class="row">
            <div class="col-md-6">{{form_row(form.password.first)}}</div>
            <div class="col-md-6">{{form_row(form.password.second)}}</div>
        </div>
</div>
<div class="modal-footer">
    <a class="btn default" data-dismiss="modal">{{ 'cancel_button'|trans }}</a>
    <button class="btn blue  mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <span class="ladda-label">{{ action |default('save_button')|trans }}</span>
        <span class="ladda-spinner"></span>
    </button>
</div>
{{form_end(form)}}
