{% extends 'layout/userprofile.html.twig' %}
{% block content %}
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon"><i class="flaticon-list-3"></i></span>
                    <h3 class="m-portlet__head-text">
                        Detalles del usuario
                    </h3>
                </div>
            </div>

            <div class="m-portlet__head-tools">
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <a data-href="{{ path('usuario_edit',{'id':usuario.id}) }}" class="btn btn-sm btn-primary m-btn text-uppercase editar_usuario">
                            <span><i class="flaticon-edit-1"></i></span> Editar
                        </a>
                    </li>
                </ul>
            </div>

        </div>
        <div class="m-portlet__body">
            <table class="table table-striped" style="margin-bottom: 0px">
                <tr>
                    <th>Nombre</th>
                    <td colspan="3">{{ usuario.nombre }}</td>
                </tr>
                <tr>
                    <th>Usuario</th>
                    <td>{{ usuario.usuario }}</td>
                    <th>Correo</th>
                    <td>{{ usuario.correo }}</td>
                </tr>
                <tr>
                    <th>√Årea</th>
                    <td colspan="3">{{ usuario.area }}</td>
                </tr>
                <tr>
                    <th>Cargo</th>
                    <td>{{ usuario.cargo }}</td>
                    <th>Activo</th>
                    <td>{{ usuario.activo ? 'Si' : 'No' }}</td>
                </tr>

            </table>
        </div>
    </div>
{% endblock %}
